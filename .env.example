# データベース接続URL (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/schedule_arranger?schema=public"

# セッション管理用のパスワード (32文字以上のランダム文字列)
SESSION_PASSWORD="your-secret-session-password-at-least-32-characters-long"

# GitHub OAuth アプリケーション設定
# https://github.com/settings/developers でアプリを作成してください
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# CSRF対策用の信頼できるオリジン
CSRF_TRUSTED_ORIGIN="http://localhost:3000"

# サーバーポート (オプション)
PORT=3000
